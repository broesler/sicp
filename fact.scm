(define !
  (lambda (n)
    (if (= n 0)
      1
      (* n (! (- n 1)))
      )
    )
  )

(define sum
  (lambda (f lower upper)
    (if (> lower upper)
      0
      (+ (f lower) (sum f (+ 1 lower) upper))
      )
    )
  )

